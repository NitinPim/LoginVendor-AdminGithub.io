
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        .form-container {
            padding: 20px;
            border-radius: 20px;
            box-shadow: 2px 2px 25px #0056b3;
            background-color: #eeeaeaa6;
            width: 100%;
            max-width: 500px;
            border: 1px solid #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 d-flex justify-content-center">
                <div class="form-container m-5">
                    <h1 class="text-center">Login Form</h1>
                    @using(Html.BeginForm("Login", "Project", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form1" }))
                    {
                       <input type="hidden" id="hiddenId"/>
                       <div class="mt-3">
                           <label>Username</label>
                           <input type="text" class="form-control" id="usename" name="UserName" required/>

                       </div>
                    <div class="mt-3">
                        <label>Password</label>
                        <input type="password" class="form-control" id="password" name="Password" required />

                    </div>
                    if (@TempData["Message"] != null)
                    {
                        <span style="color:red;text-align:center;margin-left:66px;">@TempData["Message"].ToString()</span>
                    }
                    @*<div class="mt-3">
                        <label class="me-3">UserRoleId</label>
                        <input type="radio"  name="UserRoleId" value="1" required /> 1
                        <input type="radio"class="ms-3"  name="UserRoleId" value="2" required />  2
                    </div>*@
                    <div class="mt-5">
                       <button class="btn btn-primary form-control" id="btnSubmit" type="submit">Submit</button>
                        <p><span> Registered YourSelf</span> <a href="/Project/Registration" style="text-decoration:none;color:#0056b3;" class="fw-bold"> Register</a></p>
                       
                    </div>

                    }
                </div>
            </div>
        </div>
    </div>



    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</body>
</html>
